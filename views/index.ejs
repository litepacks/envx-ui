<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>envx-ui</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <div id="app">
    <header class="header">
      <div class="header-left">
        <h1 class="logo">
          <span class="logo-icon">âš¡</span>
          envx-ui
        </h1>
        <div class="folder-selector">
          <button id="btn-folder" class="btn btn-ghost folder-btn" title="Change folder">
            <span class="folder-icon">ğŸ“</span>
            <span class="folder-path" id="current-folder-name"><%= folderInfo.name %></span>
            <span class="folder-arrow">â–¼</span>
          </button>
          <% if (folderInfo.isSaved) { %>
            <button id="btn-unsave-folder" class="btn btn-icon btn-ghost" title="Remove from saved">â˜…</button>
          <% } else { %>
            <button id="btn-save-folder" class="btn btn-icon btn-ghost" title="Save this folder">â˜†</button>
          <% } %>
        </div>
      </div>
      <div class="header-right">
        <button id="btn-encrypt" class="btn btn-warning" disabled title="Encrypt current file">
          <span class="icon">ğŸ”</span>
          Encrypt
        </button>
      </div>
    </header>

    <!-- Folder Dropdown Panel -->
    <div id="folder-panel" class="folder-panel hidden">
      <div class="folder-panel-content">
        <div class="folder-section">
          <div class="folder-section-header">
            <span class="folder-section-title">ğŸ” Search Folder</span>
          </div>
          <div class="folder-search-container">
            <input 
              type="text" 
              id="folder-search-input" 
              placeholder="Type to search folders..."
              autocomplete="off"
            >
            <div id="folder-search-results" class="folder-search-results hidden"></div>
          </div>
        </div>
        
        <div class="folder-section">
          <div class="folder-section-header">
            <span class="folder-section-title">ğŸ“ Or Enter Path</span>
          </div>
          <div class="folder-input-row">
            <input 
              type="text" 
              id="folder-path-input" 
              placeholder="/full/path/to/project"
              autocomplete="off"
            >
            <button id="btn-open-folder" class="btn btn-primary btn-sm">Open</button>
          </div>
        </div>
        
        <% if (savedFolders.length > 0) { %>
        <div class="folder-section">
          <div class="folder-section-header">
            <span class="folder-section-title">â˜… Saved</span>
          </div>
          <div class="folder-list" id="saved-folders">
            <% savedFolders.forEach(folder => { %>
              <button class="folder-item" data-path="<%= folder %>">
                <span class="folder-item-icon">ğŸ“</span>
                <span class="folder-item-name" title="<%= folder %>"><%= folder.split('/').pop() %></span>
                <span class="folder-item-path"><%= folder %></span>
              </button>
            <% }) %>
          </div>
        </div>
        <% } %>
        
        <% if (recentFolders.length > 0) { %>
        <div class="folder-section">
          <div class="folder-section-header">
            <span class="folder-section-title">ğŸ• Recent</span>
          </div>
          <div class="folder-list" id="recent-folders">
            <% recentFolders.forEach(folder => { %>
              <button class="folder-item" data-path="<%= folder.path %>">
                <span class="folder-item-icon">ğŸ“</span>
                <span class="folder-item-name" title="<%= folder.path %>"><%= folder.name %></span>
                <span class="folder-item-path"><%= folder.path %></span>
              </button>
            <% }) %>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <main class="main">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Files</h2>
          <button id="btn-new-file" class="btn btn-sm btn-ghost" title="Create new env file">+</button>
        </div>
        <nav class="file-list" id="file-list">
          <% if (files.length === 0) { %>
            <p class="empty-state">No .env files found</p>
          <% } else { %>
            <% files.forEach((file, index) => { %>
              <button 
                class="file-item <%= index === 0 ? 'active' : '' %>" 
                data-file="<%= file %>"
              >
                <span class="file-icon">ğŸ“„</span>
                <span class="file-name"><%= file %></span>
              </button>
            <% }) %>
          <% } %>
        </nav>
        <% if (hasKeys) { %>
          <div class="sidebar-footer">
            <span class="keys-badge" title="Encryption keys available">
              <span class="icon">ğŸ”‘</span>
              .env.keys
            </span>
          </div>
        <% } %>
      </aside>

      <section class="content">
        <div class="content-header">
          <h2 id="current-file-name">Select a file</h2>
          <div class="content-actions">
            <button id="btn-add-key" class="btn btn-primary" disabled>
              <span class="icon">+</span>
              Add Key
            </button>
          </div>
        </div>

        <div class="entries-container">
          <table class="entries-table" id="entries-table">
            <thead>
              <tr>
                <th class="col-key">KEY</th>
                <th class="col-value">VALUE</th>
                <th class="col-actions">ACTIONS</th>
              </tr>
            </thead>
            <tbody id="entries-body">
              <tr class="empty-row">
                <td colspan="3">
                  <div class="empty-state">
                    <p>Select a file from the sidebar to view environment variables</p>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>
    </main>

    <!-- Add Key Modal -->
    <div id="modal-add-key" class="modal hidden">
      <div class="modal-backdrop"></div>
      <div class="modal-content">
        <div class="modal-header">
          <h3>Add New Key</h3>
          <button class="btn-close" data-close-modal>Ã—</button>
        </div>
        <form id="form-add-key" class="modal-body">
          <div class="form-group">
            <label for="new-key-name">Key Name</label>
            <input 
              type="text" 
              id="new-key-name" 
              placeholder="MY_NEW_KEY"
              pattern="[A-Za-z_][A-Za-z0-9_]*"
              required
              autocomplete="off"
            >
            <span class="form-hint">Letters, numbers, underscores. Start with letter or underscore.</span>
          </div>
          <div class="form-group">
            <label for="new-key-value">Value</label>
            <input 
              type="text" 
              id="new-key-value" 
              placeholder="value"
              autocomplete="off"
            >
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-ghost" data-close-modal>Cancel</button>
            <button type="submit" class="btn btn-primary">Add Key</button>
          </div>
        </form>
      </div>
    </div>

    <!-- New File Modal -->
    <div id="modal-new-file" class="modal hidden">
      <div class="modal-backdrop"></div>
      <div class="modal-content">
        <div class="modal-header">
          <h3>Create New Env File</h3>
          <button class="btn-close" data-close-modal>Ã—</button>
        </div>
        <form id="form-new-file" class="modal-body">
          <div class="form-group">
            <label for="new-file-name">File Name</label>
            <input 
              type="text" 
              id="new-file-name" 
              placeholder=".env.development"
              pattern="\.env(\.[a-zA-Z0-9_-]+)?"
              required
              autocomplete="off"
            >
            <span class="form-hint">Must start with .env (e.g., .env.local, .env.staging)</span>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-ghost" data-close-modal>Cancel</button>
            <button type="submit" class="btn btn-primary">Create File</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container"></div>

    </div>

  <!-- Initial Data -->
  <script>
    window.__INITIAL_DATA__ = {
      files: <%- JSON.stringify(files) %>,
      hasKeys: <%= hasKeys %>,
      cwd: <%- JSON.stringify(cwd) %>,
      folderInfo: <%- JSON.stringify(folderInfo) %>,
      savedFolders: <%- JSON.stringify(savedFolders) %>,
      recentFolders: <%- JSON.stringify(recentFolders) %>
    };
  </script>
  <script src="/app.js"></script>
</body>
</html>
